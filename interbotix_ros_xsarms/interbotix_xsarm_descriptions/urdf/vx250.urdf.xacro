<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="arm_macro" params="robot_name:=vx250">

    <xacro:property name="robot_model"
      value="vx250"/>

    <xacro:property name="dof"
      value="5"
      scope="global"/>

    <xacro:property name="mesh_directory"             value="package://interbotix_xsarm_descriptions/meshes/${robot_model}_meshes"/>
    <xacro:property name="pi_offset"                  value="0.00001"/>

    <xacro:property name="waist_limit_effort"         value="10"/>
    <xacro:property name="waist_limit_lower"          value="${-pi + pi_offset}"/>
    <xacro:property name="waist_limit_upper"          value="${pi - pi_offset}"/>
    <xacro:property name="waist_limit_vel"            value="${pi}"/>

    <xacro:property name="shoulder_limit_effort"      value="20"/>
    <xacro:property name="shoulder_limit_lower"       value="${radians(-102)}"/>
    <xacro:property name="shoulder_limit_upper"       value="${radians(100)}"/>
    <xacro:property name="shoulder_limit_vel"         value="1"/>

    <xacro:property name="elbow_limit_effort"         value="15"/>
    <xacro:property name="elbow_limit_lower"          value="${radians(-102)}"/>
    <xacro:property name="elbow_limit_upper"          value="${radians(92)}"/>
    <xacro:property name="elbow_limit_vel"            value="${pi}"/>

    <xacro:property name="wrist_angle_limit_effort"   value="5"/>
    <xacro:property name="wrist_angle_limit_lower"    value="${radians(-100)}"/>
    <xacro:property name="wrist_angle_limit_upper"    value="${radians(123)}"/>
    <xacro:property name="wrist_angle_limit_vel"      value="${pi}"/>

    <xacro:property name="wrist_rotate_limit_effort"  value="1"/>
    <xacro:property name="wrist_rotate_limit_lower"   value="${-pi + pi_offset}"/>
    <xacro:property name="wrist_rotate_limit_upper"   value="${pi - pi_offset}"/>
    <xacro:property name="wrist_rotate_limit_vel"     value="${pi}"/>

    <xacro:property name="gripper_limit_vel"          value="${pi}"/>

    <xacro:property name="finger_limit_effort"        value="5"/>
    <xacro:property name="finger_limit_lower"         value="0.015"/>
    <xacro:property name="finger_limit_upper"         value="0.037"/>
    <xacro:property name="finger_limit_vel"           value="1"/>

    <material name="interbotix_black">
      <texture filename="package://interbotix_xsarm_descriptions/meshes/interbotix_black.png"/>
    </material>

    <xacro:if value="$(arg use_world_frame)">
      <link name="world"/>
      <joint name="fixed" type="fixed">
        <parent
          link="world"/>
        <child
          link="${robot_name}/$(arg base_link_frame)"/>
      </joint>
    </xacro:if> <!-- use_world_frame -->

    <link name="${robot_name}/$(arg base_link_frame)">
      <visual>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="0 0 0"/>
        <geometry>
          <mesh
            filename="${mesh_directory}/base.stl"
            scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="interbotix_black"/>
      </visual>
      <collision>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="0 0 0"/>
        <geometry>
          <mesh
            filename="${mesh_directory}/base.stl"
            scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="-0.0512186000 -0.0001032540 0.0203383000"/>
        <mass value="0.941311"/>
        <inertia
          ixx="0.0058130000"
          iyy="0.0016850000"
          izz="0.0069500000"
          ixy="0.0000100200"
          ixz="0.0000006381"
          iyz="-0.0000741000"/>
      </inertial>
    </link>

    <joint name="waist" type="revolute">
      <axis xyz="0 0 1"/>
      <limit
        effort="${waist_limit_effort}"
        lower="${waist_limit_lower}"
        upper="${waist_limit_upper}"
        velocity="${waist_limit_vel}"/>
      <origin
        rpy="0 0 0"
        xyz="0 0 0.079"/>
      <parent
        link="${robot_name}/$(arg base_link_frame)"/>
      <child
        link="${robot_name}/shoulder_link"/>
      <dynamics
        friction="0.1"
        damping="0.1"/>
    </joint>

    <link name="${robot_name}/shoulder_link">
      <visual>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="0 0 -0.003"/>
        <geometry>
          <mesh
            filename="${mesh_directory}/shoulder.stl"
            scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="interbotix_black"/>
      </visual>
      <collision>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="0 0 -0.003"/>
        <geometry>
          <mesh
            filename="${mesh_directory}/shoulder.stl"
            scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="0.0002592330 -0.0000033552 0.0116129000"/>
        <mass value="0.798614"/>
        <inertia
          ixx="0.0009388000"
          iyy="0.0011380000"
          izz="0.0012010000"
          ixy="-0.0000000010"
          ixz="-0.0000000191"
          iyz="0.0000059568"/>
      </inertial>
    </link>

    <joint name="shoulder" type="revolute">
      <axis xyz="0 1 0"/>
      <limit
        effort="${shoulder_limit_effort}"
        lower="${shoulder_limit_lower}"
        upper="${shoulder_limit_upper}"
        velocity="${shoulder_limit_vel}"/>
      <origin
        rpy="0 0 0"
        xyz="0 0 0.04805"/>
      <parent
        link="${robot_name}/shoulder_link"/>
      <child
        link="${robot_name}/upper_arm_link"/>
      <dynamics
        friction="0.1"
        damping="0.1"/>
    </joint>

    <link name="${robot_name}/upper_arm_link">
      <visual>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="0 0 0"/>
        <geometry>
          <mesh
            filename="${mesh_directory}/upper_arm.stl"
            scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="interbotix_black"/>
      </visual>
      <collision>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="0 0 0"/>
        <geometry>
          <mesh
            filename="${mesh_directory}/upper_arm.stl"
            scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="0.0143621000 -0.0001048380 0.1712860000"/>
        <mass value="0.549093"/>
        <inertia
          ixx="0.0046420000"
          iyy="0.0045180000"
          izz="0.0004815000"
          ixy="-0.0000037585"
          ixz="0.0000088533"
          iyz="0.0006202000"/>
      </inertial>
    </link>

    <joint name="elbow" type="revolute">
      <axis xyz="0 1 0"/>
      <limit
        effort="${elbow_limit_effort}"
        lower="${elbow_limit_lower}"
        upper="${elbow_limit_upper}"
        velocity="${elbow_limit_vel}"/>
      <origin
        rpy="0 0 0"
        xyz="0.06 0 0.25"/>
      <parent
        link="${robot_name}/upper_arm_link"/>
      <child
        link="${robot_name}/forearm_link"/>
      <dynamics
        friction="0.1"
        damping="0.1"/>
    </joint>

    <link name="${robot_name}/forearm_link">
      <visual>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="0 0 0"/>
        <geometry>
          <mesh
            filename="${mesh_directory}/forearm.stl"
            scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="interbotix_black"/>
      </visual>
      <collision>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="0 0 0"/>
        <geometry>
          <mesh
            filename="${mesh_directory}/forearm.stl"
            scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="0.1447910000 -0.0000917040 0.0000000000"/>
        <mass value="0.383741"/>
        <inertia
          ixx="0.0024380000"
          iyy="0.0001176000"
          izz="0.0024970000"
          ixy="-0.0000033607"
          ixz="0.0000000003"
          iyz="0.0000000000"/>
      </inertial>
    </link>

    <joint name="wrist_angle" type="revolute">
      <axis xyz="0 1 0"/>
      <limit
        effort="${wrist_angle_limit_effort}"
        lower="${wrist_angle_limit_lower}"
        upper="${wrist_angle_limit_upper}"
        velocity="${wrist_angle_limit_vel}"/>
      <origin
        rpy="0 0 0"
        xyz="0.25 0 0"/>
      <parent
        link="${robot_name}/forearm_link"/>
      <child
        link="${robot_name}/wrist_link"/>
      <dynamics
        friction="0.1"
        damping="0.1"/>
    </joint>

    <link name="${robot_name}/wrist_link">
      <visual>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="0 0 0"/>
        <geometry>
          <mesh
            filename="${mesh_directory}/wrist.stl"
            scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="interbotix_black"/>
      </visual>
      <collision>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="0 0 0"/>
        <geometry>
          <mesh
            filename="${mesh_directory}/wrist.stl"
            scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <origin
          rpy="0 0 ${pi/2}"
          xyz="0.0434150000 -0.0000080610 0.0108670000"/>
        <mass value="0.109737"/>
        <inertia
          ixx="0.0000380400"
          iyy="0.0000342500"
          izz="0.0000358400"
          ixy="0.0000000182"
          ixz="0.0000000026"
          iyz="0.0000024625"/>
      </inertial>
    </link>

    <!-- Include the gripper if used -->

    <xacro:if value="$(arg use_gripper)">

      <joint name="wrist_rotate" type="revolute">
        <axis xyz="1 0 0"/>
        <limit
          effort="${wrist_rotate_limit_effort}"
          lower="${wrist_rotate_limit_lower}"
          upper="${wrist_rotate_limit_upper}"
          velocity="${wrist_rotate_limit_vel}"/>
        <origin
          rpy="0 0 0"
          xyz="0.065 0 0"/>
        <parent
          link="${robot_name}/wrist_link"/>
        <child
          link="${robot_name}/gripper_link"/>
        <dynamics
          friction="0.1"
          damping="0.1"/>
      </joint>

      <link name="${robot_name}/gripper_link">
        <visual>
          <origin
            rpy="0 0 ${pi/2}"
            xyz="-0.02 0 0"/>
          <geometry>
            <mesh
              filename="${mesh_directory}/gripper.stl"
              scale="0.001 0.001 0.001"/>
          </geometry>
          <material name="interbotix_black"/>
        </visual>
        <collision>
          <origin
            rpy="0 0 ${pi/2}"
            xyz="-0.02 0 0"/>
          <geometry>
            <mesh
              filename="${mesh_directory}/gripper.stl"
              scale="0.001 0.001 0.001"/>
          </geometry>
        </collision>
        <inertial>
          <origin
            rpy="0 0 ${pi/2}"
            xyz="0.0230000000 0.0000000010 0.0115240000"/>
          <mass value="0.097666"/>
          <inertia
            ixx="0.0000326800"
            iyy="0.0000243600"
            izz="0.0000211900"
            ixy="0.0000000000"
            ixz="0.0000000000"
            iyz="0.0000002785"/>
        </inertial>
      </link>

      <joint name="ee_arm" type="fixed">
        <axis xyz="1 0 0"/>
        <origin
          rpy="0 0 0"
          xyz="0.043 0 0"/>
        <parent
          link="${robot_name}/gripper_link"/>
        <child
          link="${robot_name}/ee_arm_link"/>
      </joint>

      <link name="${robot_name}/ee_arm_link">
        <inertial>
          <mass value="0.001"/>
          <inertia
            ixx="0.0001"
            iyy="0.0001"
            izz="0.0001"
            ixy="0"
            ixz="0"
            iyz="0"/>
        </inertial>
      </link>

      <joint name="gripper" type="continuous">
        <axis xyz="1 0 0"/>
        <limit
          effort="1"
          velocity="${gripper_limit_vel}"/>
        <origin
          rpy="0 0 0"
          xyz="0.0055 0 0"/>
        <parent
          link="${robot_name}/ee_arm_link"/>
        <child
          link="${robot_name}/gripper_prop_link"/>
        <dynamics
          friction="0.1"
          damping="0.1"/>
      </joint>

      <link name="${robot_name}/gripper_prop_link">
        <visual>
          <origin
            rpy="0 0 ${pi/2}"
            xyz="-0.0685 0 0"/>
          <geometry>
            <mesh
              filename="${mesh_directory}/gripper_prop.stl"
              scale="0.001 0.001 0.001"/>
          </geometry>
          <material name="interbotix_black"/>
        </visual>
        <collision>
          <origin
            rpy="0 0 ${pi/2}"
            xyz="-0.0685 0 0"/>
          <geometry>
            <mesh
              filename="${mesh_directory}/gripper_prop.stl"
              scale="0.001 0.001 0.001"/>
          </geometry>
        </collision>
        <inertial>
          <origin
            rpy="0 0 ${pi/2}"
            xyz="0.0008460000 -0.0000019330 0.0000420000"/>
          <mass value="0.00434"/>
          <inertia
            ixx="0.0000005923"
            iyy="0.0000011156"
            izz="0.0000005743"
            ixy="0.0000000000"
            ixz="0.0000003195"
            iyz="-0.0000000004"/>
        </inertial>
      </link>

      <!-- If the AR tag is being used, then add the AR tag mount -->

      <xacro:if value="$(arg show_ar_tag)">
        <xacro:include filename="$(find interbotix_xsarm_descriptions)/urdf/ar_tag.urdf.xacro"/>
        <xacro:ar_tag robot_name="${robot_name}" parent_link="${robot_name}/ee_arm_link">
          <origin
            rpy="0 0 0"
            xyz="-0.017 0 0.04155"/>
        </xacro:ar_tag>
      </xacro:if> <!-- show_ar_tag -->

      <!-- If the gripper bar is being used, then also add the gripper bar -->

      <xacro:if value="$(arg show_gripper_bar)">

        <joint name="gripper_bar" type="fixed">
          <axis xyz="1 0 0"/>
          <origin
            rpy="0 0 0"
            xyz="0 0 0"/>
          <parent
            link="${robot_name}/ee_arm_link"/>
          <child
            link="${robot_name}/gripper_bar_link"/>
        </joint>

        <link name="${robot_name}/gripper_bar_link">
          <visual>
            <origin
              rpy="0 0 ${pi/2}"
              xyz="-0.063 0 0"/>
            <geometry>
              <mesh
                filename="${mesh_directory}/gripper_bar.stl"
                scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="interbotix_black"/>
          </visual>
          <collision>
            <origin
              rpy="0 0 ${pi/2}"
              xyz="-0.063 0 0"/>
            <geometry>
              <mesh
                filename="${mesh_directory}/gripper_bar.stl"
                scale="0.001 0.001 0.001"/>
            </geometry>
          </collision>
          <inertial>
            <origin
              rpy="0 0 ${pi/2}"
              xyz="0.0096870000 0.0000005670 0.0049620000"/>
            <mass value="0.034199"/>
            <inertia
              ixx="0.0000074125"
              iyy="0.0000284300"
              izz="0.0000286000"
              ixy="-0.0000000008"
              ixz="-0.0000000006"
              iyz="-0.0000013889"/>
          </inertial>
        </link>

        <joint name="ee_bar" type="fixed">
          <axis xyz="1 0 0"/>
          <origin
            rpy="0 0 0"
            xyz="0.023 0 0"/>
          <parent
            link="${robot_name}/gripper_bar_link"/>
          <child
            link="${robot_name}/fingers_link"/>
        </joint>

        <link name="${robot_name}/fingers_link">
          <inertial>
            <mass value="0.001"/>
            <inertia
              ixx="0.0001"
              iyy="0.0001"
              izz="0.0001"
              ixy="0"
              ixz="0"
              iyz="0"/>
          </inertial>
        </link>

        <!-- If the gripper fingers are being used, add those as well -->

        <xacro:if value="$(arg show_gripper_fingers)">

          <joint name="left_finger" type="prismatic">
            <axis xyz="0 1 0"/>
            <limit
              effort="${finger_limit_effort}"
              lower="${finger_limit_lower}"
              upper="${finger_limit_upper}"
              velocity="${finger_limit_vel}"/>
            <origin
              rpy="0 0 0"
              xyz="0 0 0"/>
            <parent
              link="${robot_name}/fingers_link"/>
            <child
              link="${robot_name}/left_finger_link"/>
            <dynamics
              friction="0.1"
              damping="0.1"/>
          </joint>

          <link name="${robot_name}/left_finger_link">
            <visual>
              <origin
                rpy="${pi} ${pi} 0"
                xyz="0 0.005 0"/>
              <geometry>
                <mesh
                  filename="${mesh_directory}/gripper_finger.stl"
                  scale="0.001 0.001 0.001"/>
              </geometry>
              <material name="interbotix_black"/>
            </visual>
            <collision>
              <origin
                rpy="${pi} ${pi} 0"
                xyz="0 0.005 0"/>
              <geometry>
                <mesh
                  filename="${mesh_directory}/gripper_finger.stl"
                  scale="0.001 0.001 0.001"/>
              </geometry>
            </collision>
            <inertial>
              <origin
                rpy="${pi} ${pi} ${pi/2}"
                xyz="0.0138160000 0.0000000000 0.0000000000"/>
              <mass value="0.016246"/>
              <inertia
                ixx="0.0000047310"
                iyy="0.0000015506"
                izz="0.0000037467"
                ixy="-0.0000004560"
                ixz="0.0000000000"
                iyz="0.0000000000"/>
            </inertial>
          </link>

          <joint name="right_finger" type="prismatic">
            <axis xyz="0 1 0"/>
            <limit
              effort="${finger_limit_effort}"
              lower="${-finger_limit_upper}"
              upper="${-finger_limit_lower}"
              velocity="${finger_limit_vel}"/>
            <origin
              rpy="0 0 0"
              xyz="0 0 0"/>
            <parent
              link="${robot_name}/fingers_link"/>
            <child
              link="${robot_name}/right_finger_link"/>
            <dynamics
              friction="0.1"
              damping="0.1"/>
            <xacro:if value="${hardware_type != 'gz_classic'}">
              <mimic
                joint="left_finger"
                multiplier="-1"
                offset="0"/>
            </xacro:if>
          </joint>

          <link name="${robot_name}/right_finger_link">
            <visual>
              <origin
                rpy="0 ${pi} 0"
                xyz="0 -0.005 0"/>
              <geometry>
                <mesh
                  filename="${mesh_directory}/gripper_finger.stl"
                  scale="0.001 0.001 0.001"/>
              </geometry>
              <material name="interbotix_black"/>
            </visual>
            <collision>
              <origin
                rpy="0 ${pi} 0"
                xyz="0 -0.005 0"/>
              <geometry>
                <mesh
                  filename="${mesh_directory}/gripper_finger.stl"
                  scale="0.001 0.001 0.001"/>
              </geometry>
            </collision>
            <inertial>
              <origin
                rpy="0 ${pi} ${pi/2}"
                xyz="0.0138160000 0.0000000000  0.0000000000"/>
              <mass value="0.016246"/>
              <inertia
                ixx="0.0000047310"
                iyy="0.0000015506"
                izz="0.0000037467"
                ixy="0.0000004560"
                ixz="0.0000000000"
                iyz="0.0000000000"/>
            </inertial>
          </link>

          <joint name="ee_gripper" type="fixed">
            <axis xyz="1 0 0"/>
            <origin
              rpy="0 0 0"
              xyz="0.027575 0 0"/>
            <parent
              link="${robot_name}/fingers_link"/>
            <child
              link="${robot_name}/ee_gripper_link"/>
          </joint>

          <link name="${robot_name}/ee_gripper_link">
            <inertial>
              <mass value="0.001"/>
              <inertia
                ixx="0.0001"
                iyy="0.0001"
                izz="0.0001"
                ixy="0"
                ixz="0"
                iyz="0"/>
            </inertial>
          </link>

        </xacro:if> <!-- show_gripper_fingers -->

      </xacro:if> <!-- show_gripper_bar -->

    </xacro:if> <!-- use_gripper -->

    <xacro:include filename="$(find interbotix_xsarm_descriptions)/urdf/control.urdf.xacro"/>
    <xacro:include filename="$(find interbotix_xsarm_descriptions)/urdf/gazebo_configs.urdf.xacro"/>

    <xacro:if value="${hardware_type == 'gz_classic'}">
      <xacro:gazebo_configs/>
    </xacro:if>

  </xacro:macro> <!-- arm_macro -->

</robot>
